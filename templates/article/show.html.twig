{% extends 'base.html.twig' %}

{% block title %}{{ article.title }}{% endblock %}

{% block body %}

    <div class="container">
        <h1>{{ article.title }}</h1>
        <hr>
        {{ article.content|raw }}

        <h2 class="comment-title mt-5">
            <span id="comment-count">
                {{ article.comments|length }} commentaire(s)
            </span>
        </h2>

        <div class="comment-area mb-5">
            {{ form(commentForm) }}
        </div>

    </div>

{% endblock %}
